{% extends 'base.html.twig' %}
{% block stylesheets %}
    <style>
        .table { border-collapse: collapse; }
        .table th, td {
            border-bottom: 1px solid #ddd;
            width: 250px;
            text-align: left;
            align: left;
        }
    </style>
{% endblock %}
{% block body %}
    <div>
        <a href = "{{ path('app_users_add') }}">Add</a>
    </div>
    <h2>Zarejestrowani pracownicy</h2>
    <table class = "table">
        <tr>
            <th>Id</th>
            <th>Imie Nazwisko</th>
            <th>Login</th>
            <th>RCP</th>
            <th></th>
            <th></th>
        </tr>
        {% for x in dane %}
            <tr>
                <td>{{ x.Id }}</td>
                <td>{{ x.Name }}</td>
                <td>{{ x.Login }}</td>
                <td>{{ x.Rcp }}</td>
                <td><a href = "{{ path('app_users_update', { 'id' : x.Id }) }}">Edit</a></td>
                <td><a href = "{{ path('app_users_delete', { 'id' : x.Id }) }}">Delete</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}